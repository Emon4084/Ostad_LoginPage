@model List<Login_FogetPassword.Models.Registration>

@{
    ViewBag.Title = "Registered Users";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-container {
            margin: 20px auto;
            width: 90%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: hidden;
        }

        .table-header {
            background-color: #343a40;
            color: white;
            padding: 10px;
            font-size: 18px;
            font-weight: bold;
        }

        .table {
            margin: 0;
            border-collapse: collapse;
        }

            .table th {
                background-color: #343a40;
                color: white;
                text-align: left;
            }

            .table td, .table th {
                padding: 10px;
                border: 1px solid #dee2e6;
            }
    </style>
</head>
<body>
    <div class="table-container">
        <div class="table-header">Registered Users</div>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int index = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Gender</td>
                            <td>@user.Role</td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No registered users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
